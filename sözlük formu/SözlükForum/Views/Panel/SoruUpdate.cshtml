@model SözlükForum.Models.ForumSoru

@{
    ViewData["Title"] = "Soru Update";
    Layout = "~/Views/Panel/panelLayout.cshtml";
}

<h1>SoruUpdate</h1>

<h4>ForumSoru</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="SoruUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="soru" class="control-label"></label>
                <input asp-for="soru" class="form-control" />
                <span asp-validation-for="soru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eklemeTarih" class="control-label"></label>
                <input asp-for="eklemeTarih" class="form-control" />
                <span asp-validation-for="eklemeTarih" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="icerik" class="control-label"></label>
                <input asp-for="icerik" class="form-control" />
                <span asp-validation-for="icerik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="katego" class="control-label"></label>
                <select asp-for="katego" asp-items="Html.GetEnumSelectList<Katego>()" class="form-control"></select>
                <span asp-validation-for="katego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

