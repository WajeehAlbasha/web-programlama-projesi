@{
    ViewData["Title"] = "Forumlar";
    Layout = "~/Views/Panel/panelLayout.cshtml";
}

@model ViewData


<table class="table">
    <tr>
        <th>ID</th>
        <th>Soru</th>
        <th>İcerik</th>
        <th>Kategori</th>
        <th>Kullanici</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model.forumSoruss)
    {
        <tr>
            <td>@item.Id</td>
            <td><p class="text">@item.soru</p></td>
            <td><p class="text">@item.icerik</p></td>
            <td>@item.katego</td>
            <td>@item.kullanici.kullanıcıAd</td>
            <td><a href="/Panel/SoruUpdate/@item.Id" class="btn btn-primary">@localizer["guncelle"]</a></td>
            <td><a href="/Panel/SoruSil/@item.Id" class="btn btn-danger">@localizer["sil"]</a></td>
        </tr>
    }
</table>



