@model SözlükForum.Models.Kullanici
@{
    ViewData["Title"] = "Giris Yap";
}
@if (!(ViewBag.mesaj is null))
{
    <div class="alert alert-success">
        <strong>Üzgünüz </strong> @ViewData["mesaj"]
    </div>
}
<form method="post">
    <div class="form-group">
        <label asp-for="kullanıcıAd" class="control-label">@localizer["kullaniciad"]</label>
        <input asp-for="kullanıcıAd" class="form-control" />
        <span asp-validation-for="kullanıcıAd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="sifre" class="control-label">@localizer["sifre"]</label>
        <input asp-for="sifre" class="form-control" />
        <span asp-validation-for="sifre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block">@localizer["girisyap"]</button>
</form>